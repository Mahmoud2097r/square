<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="slide" data-backdrop="static" data-keyboard="false" tabindex="-1"
    aria-labelledby="slideLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="slideLabel">Add Slide</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="newSlide" action="/admin-square/dash-board" method="POST" enctype="multipart/form-data">
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="newImgs" accept="images/*" name="images"
                                multiple aria-describedby="inputGroupFileAddon01">
                            <label class="custom-file-label" for="inputGroupFile01">Choose Images</label>
                        </div>
                    </div>
                    <button class="btn btn-outline-success">Add</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    const newForm = document.querySelector('#newSlide');
    const alertErr = document.querySelector('#alert');

    newForm.addEventListener('submit', function (e) {
        let uploadNewImgs = document.querySelector('#newImgs').files.length;

        if (uploadNewImgs > 4) {
            e.preventDefault();
            let amount = uploadNewImgs - 4;
            alertErr.prepend(`You need to remove at least ${amount} or more image${amount !== 1 ? 's' : ''}`);
            alertErr.style.color = 'red';
        }
    })
</script>